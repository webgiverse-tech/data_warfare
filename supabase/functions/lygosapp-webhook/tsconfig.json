{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["deno.ns", "esnext"], // Include Deno's global types
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["./index.ts"]
}